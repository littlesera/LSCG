{
	"compilerOptions": {
		"target": "ES2018",
		"lib": ["ESNext", "dom"],
		"types": [],
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"removeComments": false,
		"outDir": "./dist",
		"baseUrl": "./src",
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "react",
    	"jsxFactory": "h"
	},
	"include": [
		"node_modules/bc-stubs/bc/**/*.d.ts",
		"./src/**/*"
	]
}
